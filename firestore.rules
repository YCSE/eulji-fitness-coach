rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own conversations
    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Only admins can read the admins collection
    match /admins/{adminId} {
      allow read: if request.auth != null;
    }

    // Allow read access to check if user is admin
    match /admins/{document=**} {
      allow read: if request.auth != null;
    }
  }
}